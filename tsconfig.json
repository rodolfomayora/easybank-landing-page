{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* custom */
    "baseUrl": "./src",
    "paths": {
      "#assets/*": ["./assets/*"],
      "#components/*": ["./components/*"],
      "#config/*": ["./config/*"],
      "#helpers/*": ["./helpers/*"],
      "#icons/*": ["./assets/icons/*"],
      "#layouts/*": ["./layouts/*"],
      "#pages/*": ["./pages/*"],
      "#routers/*": ["./routers/*"],
      "#styles/*": ["./styles/utils/*"],
      "#utils/*": ["./utils/*"]
    },
    "types": ["vitest/globals"],
  },
  "include": ["src", "**/*.ts", "**/*.mjs"],
  "references": [{ "path": "./tsconfig.node.json" }]
}